/**
 * @param {string} word1
 * @param {string} word2
 * @return {string}
 */
var mergeAlternately = function(word1, word2) {
    var newWord= '';
    var wordLength = Math.min(word1.length,word2.length)
    for(var index=0;index<wordLength;index++){
        newWord+= word1[index]+ word2[index]
    }
    return newWord + word1.slice(wordLength) + word2.slice(wordLength);
};
